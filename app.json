{
  "expo": {
    "name": "hkdb",
    "slug": "hkdb",
    "version": "1.0.0",
    "orientation": "portrait",
    "assetBundlePatterns": [
      "src/assets/**/*"
    ],
    "icon": "./src/assets/images/icon.png",
    "scheme": "hkdb",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#252525"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#252525"
        }
      ],
      "expo-mail-composer",
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
